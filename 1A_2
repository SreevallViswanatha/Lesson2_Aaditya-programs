#include <stdio.h>
#include <stdlib.h>
//While purchasing certain items, a discount of 10% is offered if the quantity purchased is more than 1000.
//If quantity and price per item are input through the keyboard, write a program to calculate the total expenses.
int main()
{

    int quantity;
    float price, discount, expenses;
    printf("Enter the quantity: ");
    scanf("%d", &quantity);
    printf("Enter the price of an item: ");
    scanf("%f", &price);
    expenses=price*quantity;
    if(quantity>1000)
        discount=expenses*1/10;
    else
        discount=0;
    expenses=expenses-discount;
    printf("The expenses are: %f", expenses);
}
