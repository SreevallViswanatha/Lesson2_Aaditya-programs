#include <stdio.h>
#include <stdlib.h>
//Given the length and breadth of a rectangle,
// write a program to find whether the area of the rectangle is greater than its perimeter.
int main()
{

    float length, breath, area, perimeter;
    printf("Enter the length of a rectangle: ");
    scanf("%f", &length);
    printf("Enter the breath of a rectangle: ");
    scanf("%f", &breath);

    area=length*breath;
    perimeter=2*(length+breath);

    if(area>perimeter)
    {
        printf("The area, %.2f, is greater than the perimeter, %.2f.", area, perimeter);
    }
    else
    {
        printf("The perimeter, %.2f, is greater than the area, %.2f", perimeter, area);
    }
}
