#include <stdio.h>
#include <stdlib.h>
//WAP to accept Employee grade and salary and display the net salary.
int main()
{

    int salary, grade;
    float HRA, DA, PF, net_salary;

    printf("Enter the salary of the employee: ");
    scanf("%d", &salary);

    printf("enter the grade of the employee: ");
    scanf("%d", &grade);

    if(grade==1)
    {
        HRA=0.5*salary;
        DA=0.2*salary;
        PF=0.05*salary;
    }
    else if(grade==2)
    {
        HRA=0.4*salary;
        DA=0.3*salary;
        PF=0.03*salary;
    }
    else if(grade==3)
    {
        HRA=0.3*salary;
        DA=0.15*salary;
        PF=0.04*salary;
    }
    else if(grade==4)
    {
        HRA=0.2*salary;
        DA=0.1*salary;
        PF=0.05*salary;
    }
    else if(grade==5)
    {
        HRA=0.1*salary;
        DA=0.05*salary;
        PF=0.01*salary;
    }

    net_salary=salary+HRA+DA-PF;

    printf("\nThe salary is: %d\n", salary);
    printf("\nThe grade is: %d\n", grade);
    printf("\nThe HRA is: %.2f\n", HRA);
    printf("\nThe DA is: %.2f\n", DA);
    printf("\nThe PF is: %.2f\n", PF);
    printf("\nThe net salary is: %.2f\n", net_salary);
}
