#include <stdio.h>
#include <stdlib.h>
//WAP to accept the age of a candidate and citizenship status from the user and determine whether the candidate is eligible for casting vote.
//Any person who is a citizen and whose age is above 18 are eligible to cast a vote.
int main()
{

    char citizenship;
    int age;

    printf("Enter C if person is citizen and enter N if person is not a citizen: ");
    scanf("%c", &citizenship);

    printf("Enter the age: ");
    scanf("%d", &age);

    if((citizenship=='C')&&(age>=18))
    {
        printf("The candidate is eligible to vote.");
    }
    else
    {
        printf("The candidate isn't eligible to vote.");
    }
}
