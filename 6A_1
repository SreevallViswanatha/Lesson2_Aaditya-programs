#include <stdio.h>
#include <stdlib.h>
//WAP to accept the height of a person in centimeter and categorize the person according to their height.
//•If the height is greater than or equal to 165cm, then the person is "Tall".
//•If the height is equal to 150, the person is "Average height".
//•If the height is less than 150, the person is a "Dwarf".

int main()
{

    int height;

    printf("Enter the height of a person: ");
    scanf("%d", &height);

    if(height>=165)
    {
        printf("The person is tall.");
    }
    else if(height==150)
    {
        printf("The person is average height.");
    }
    else
    {
        printf("The person is a dwarf.");
    }
}

