#include <stdio.h>
#include <stdlib.h>
//WAP to accept the height of a person in centimeter and categorize the person according to his/her height.
//If the height is greater than or equal to 165cm, then the person is "Tall".
//If the height is equal to 150, the person is "Average height".
//If the height is less than 150, the person is a "Dwarf".

int main()
{

    int height;

    printf("Please enter the height of a person: ");
    scanf("%d", &height);
    //Checking the conditions for height:

    if(height>=165)
    {
        printf("The person, whose height is %d, is tall.", height);
    }
    else if(height==150)
    {
        printf("The person, whose height is %d, is average height.", height);
    }
    else
    {
        printf("The person, whose height is %d, is a dwarf.", height);
    }
}

