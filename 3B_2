#include <stdio.h>
#include <stdlib.h>
#include<math.h>
//Given a, b, c of a quadratic equation ax2+bx+c=0, find the value of x.
int main()
{

    int a, b, c, discriminant;
    float x1, x2;
    printf("Enter the value of constant a: ");
    scanf("%d", &a);
    printf("Enter the value of constant b: ");
    scanf("%d", &b);
    printf("Enter the value of constant c: ");
    scanf("%d", &c);

    discriminant=(b*b)-(4*a*c);

    if(discriminant==0)
    {
        printf("Both roots are equal.\n");
        x1=-b/2*a;
        x2=x1;
        printf("The first root, x1=%.2f.\n", x1);
        printf("The second root, x2=%.2f.\n", x2);
    }
    else if(discriminant>0)
    {
        printf("Both roots are real and different.\n");
        x1=(-b+sqrt(discriminant))/2*a;
        x2=(-b-sqrt(discriminant))/2*a;
        printf("The first root, x1=%.2f.\n", x1);
        printf("The second root, x2=%.2f.\n", x2);
    }
    else
    {
        printf("The roots are imaginary.\nNo solution.");
    }
}
