#include <stdio.h>
#include <stdlib.h>
//WAP to accept month, and number of the year and display number of days in the month.
int main()
{

   int year, month;

   printf("Enter the year: ");
   scanf("%d", &year);

   printf("Enter the month: ");
   scanf("%d", &month);

   if(month==1)
   {
       printf("The month, January, has 31 days.");
   }
   else if(month==2)
   {
       if((year%400==0)||((year%4==0)&&!(year%100==0)))
       {
           printf("The month, February, has 29 days.");
       }
       else
       {
           printf("The month, February, has 28 days.");
       }
   }
   else if(month==3)
   {
       printf("The month, March, has 31 days.");
   }
   else if(month==4)
   {
       printf("The month, April, has 30 days.");
   }
   else if(month==5)
   {
       printf("The month, May, has 31 days.");
   }
   else if(month==6)
   {
       printf("The month, June, has 30 days.");
   }
   else if(month==7)
   {
       printf("The month, July, has 31 days.");
   }
   else if(month==8)
   {
       printf("The month, August, has 31 days.");
   }
   else if(month==9)
   {
       printf("The month, September, has 30 days.");
   }
   else if(month==10)
   {
       printf("The month, October, has 31 days.");
   }
   else if(month==11)
   {
       printf("The month, November, has 30 days.");
   }
   else if(month==12)
   {
       printf("The month, December, has 31 days.");
   }
   else
   {
       printf("There is no month like that.\nPlease enter a month from 1 to 12.");
   }
}
