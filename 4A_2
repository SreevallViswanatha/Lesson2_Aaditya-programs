#include <stdio.h>
#include <stdlib.h>
//Find the largest of 3 numbers without using operators.
int main()
{

    int firstnumber, secondnumber, thirdnumber;

    printf("Enter the first number: ");
    scanf("%d", &firstnumber);

    printf("Enter the second number: ");
    scanf("%d", &secondnumber);

    printf("Enter the third number: ");
    scanf("%d", &thirdnumber);

    if((firstnumber/secondnumber)&&(firstnumber/thirdnumber))
    {
        printf("The first number, %d, is the largest.", firstnumber);
    }
    else if((secondnumber/firstnumber)&&(secondnumber/thirdnumber))
    {
        printf("The second number, %d, is the largest.", secondnumber);
    }
    else
    {
        printf("The third number, %d, is the largest.", thirdnumber);
    }
}
