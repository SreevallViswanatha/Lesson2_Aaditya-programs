#include <stdio.h>
#include <stdlib.h>
//WAP to accept a number and display whether it is divisible by 3 and 5 or divisible only by 5 or divisible only by 3 or none.
int main()
{

    int number;
    printf("Enter a number: ");
    scanf("%d", &number);

    if(number%3==0&&number%5==0)
    {
        printf("The number, %d, is divisible by 3 and 5.", number);
    }
    else if(number%3==0)
    {
        printf("The number, %d, is divisible by 3.", number);
    }
    else if(number%5==0)
    {
        printf("The number, %d, is divisible by 5.", number);
    }
    else
    {
        printf("The number, %d, is neither divisible by 3, nor 5.", number);
    }
}
