#include <stdio.h>
#include <stdlib.h>
//WAP to check whether a given number is positive or negative.
int main()
{

    int number;

    printf("Enter a number: ");
    scanf("%d", &number);

    if(number>0)
    {
        printf("The number you have entered is positive.");
    }
    else if(number==0)
    {
        printf("The number you entered is zero.");
    }
    else
    {
        printf("The number you have entered is negative.");
    }
}
