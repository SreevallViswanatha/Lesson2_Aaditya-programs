#include <stdio.h>
#include <stdlib.h>
//Write a C program to read roll no, name and marks of three subjects and calculate the total, percentage and division.
int main()
{

   int percentage, total, marks1, marks2, marks3, rollnumber;
   char name[100];

   printf("Enter the student's name: ");
   scanf("%s", name);

   printf("Enter the marks in subject 1: ");
   scanf("%d", &marks1);

   printf("Enter the marks in subject 2: ");
   scanf("%d", &marks2);

   printf("Enter the marks in subject 3: ");
   scanf("%d", &marks3);

   printf("Enter the roll number of the student: ");
   scanf("%d", &rollnumber);

   total=marks1+marks2+marks3;

   percentage=total/3;

   if(percentage>=60)
   {
       printf("\nThe student is first.\n");
   }
   else if((percentage<60)&&(percentage>=48))
   {
       printf("\nThe student is second.\n");
   }
   else if((percentage<48)&&(percentage>=36))
   {
       printf("\nThe student has passed.\n");
   }
   else
   {
       printf("\nThe student has failed.\n");
   }
   printf("\nThe student is %s.\n", name);
   printf("\nThe roll of the student is %d\n", rollnumber);
   printf("\nThe total is %d\n", total);
   printf("\nThe percentage is %d.\n", percentage);
}
