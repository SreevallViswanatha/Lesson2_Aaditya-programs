#include <stdio.h>
#include <stdlib.h>
//Any integer is input through the keyboard. Write a program to find out whether it is an odd number or an even number.
int main()
{

    int number;
    printf("Enter a number: ");
    scanf("%d", &number);
    if(number%2==0)
    {
        printf("The number you have entered is an even number.");
    }
    else
    {
        printf("The number you have entered is an odd number.");
    }
}
