#include <stdio.h>
#include <stdlib.h>
//If the cost price and selling price of an item is input through the keyboard,
//write a program to determine whether the seller has made profit or incurred loss.
int main()
{

    float CP, SP, PL;
    printf("Enter the cost price of an item: ");
    scanf("%f", &CP);
    printf("Enter the selling price of an item: ");
    scanf("%f", &SP);
    if(CP>SP)
    {
      PL=CP-SP;
      printf("The person incurred a loss of $%f.", PL);
    }
   else if(CP<SP)
   {
       PL=SP-CP;
       printf("The person incurred a profit of $%f.", PL);
   }
   else
   {
       printf("The person incurred neither loss nor profit.");
   }
}
